extends layout

block content
  h2(class='welcome') Welcome to Pong!
  div(class='row')
    div(class='formWrapper col-md-6 col-md-offset-3')
      h3 Login
      form(class='loginInfo' action='/', method='POST')
        input(class='inputText',type='text', name='Username', placeholder='Username')
        br
        input(class='inputText', type='text', name='Password', placeholder='Password')
        br
        input(class='btn btn-default', type='submit', name='submit', value='submit')
  div(class='row')
    div(class='newUser col-md-6 col-md-offset-3')
      p Don't have an account?
      p: a Join Today!
